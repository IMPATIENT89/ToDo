<div class="container" id="cnterror">
  <%= render 'shared/errors', obj: @user %>
</div>
<div class="container " id="cntsgnup"> 
  <div class="row justify-content-center">
    <div class="col-lg-16">
      <%= form_with(model: @user, local: true) do |form| %>
        <div class="form-group row mt-3">
          <%= form.label :username, "Your Full Name", class: "col-8 col-form-label text-dark " %>
          <div class="col-14">
            <%= form.text_field :username, class: "form-control shadow mb-4 bg-white rounded", placeholder: "Enter your full name" %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :email, "Email", class: "col-8 col-form-label text-dark " %>
          <div class="col-14"> 
            <%= form.email_field :email, class: "form-control shadow mb-4 bg-white rounded", placeholder: "Enter your email address" %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :password, class: "col-8 col-form-label text-dark " %>
          <div class="col-14"> 
            <%= form.password_field :password, class: "form-control shadow mb-4 bg-white rounded", placeholder: "Choose a password" %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :password_confirmation, "Confirm Password", class: "col-8 col-form-label text-dark " %>
          <div class="col-14"> 
            <%= form.password_field :password_confirmation, class: "form-control shadow mb-4 bg-white rounded", placeholder: "Enter the same password" %>
          </div>
        </div> 
        <div class="input-group justify-content-center mb-3">
          <%= form.submit(@user.new_record? ? "Sign Up!" : "Update Profile!", class: "btn btn-outline-dark btn-lg text-center" )%>
        </div>
      <% end %>
    </div>
  </div>
</div>
