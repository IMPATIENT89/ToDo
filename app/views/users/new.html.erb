<div class="container-fluid mt-5" style="overflow-x: auto;">
  <div class="row justify-content-center">
      <div class="col-lg-3">
        
        <% if logged_in_as_user? %>
          <div class="container text-center">
            <h1> Please LogOut first to continue</h1>
          </div>

        <% else %>
          <div class="container text-center">
            <h1> Sign Up!</h1>
          </div>
          <%= render 'form' %>
        <% end %>
      </div>
  </div>
</div>





