<div class="row justify-content-center ">
  <div class="col-lg-3" id="login-container">
    <% if logged_in_as_user? %>
          <div class="container text-center">
            <h1> Please LogOut first to continue</h1>
          </div>

        <% else %>
          <div class="container text-center">
            <h1> Sign In!</h1>
          </div>
          <%= render 'form' %>
        <% end %>
  </div>
</div>