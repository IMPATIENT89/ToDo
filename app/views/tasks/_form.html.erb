<div class="container" id="cnterror">
      <%= render 'shared/errors', obj: @task %>
    </div>
    <div class="row justify-content-center">
      <div class="col-lg-5">
        <%= form_with(model: @task, local: true) do |form| %>
          <div class="form-group">
            <%= form.label :title, class: "text-dark mt-3" %>
            <%= form.text_field :title, class: "form-control", placeholder: "Title of Task (min 6 characters)" %>
          </div>
          <div class="form-group">
            <%= form.label :description, class: "text-dark mt-3" %>
            <%= form.text_area :description, rows: 10, class: "form-control", placeholder: "Description of Task (min 10 characters)" %>
          </div>
          <div class="form-group">
            <%= form.label :task_start_time, class: "text-dark mt-3" %>
            <%= form.datetime_field :task_start_time, class: "form-control", placeholder: "Enter the date and time of starting the task", min: Time.now.in_time_zone("Asia/Kolkata").strftime('%Y-%m-%dT%H:%M') %>
          </div>
          <div class="form-group">
            <%= form.label :task_end_time, class: "text-dark mt-3" %>
            <%= form.datetime_field :task_end_time, class: "form-control", placeholder: "Enter the date and time of ending the task", min: Time.now.in_time_zone("Asia/Kolkata").strftime('%Y-%m-%dT%H:%M') %>
          </div>
          <div class="text-center mt-3">
            <%= form.submit "Confirm!", class: "btn btn-outline-dark btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="text-center mt-2">
      <%= link_to "Cancel and Return to all Tasks", tasks_path, class: "btn btn-primary" %>
    </div>